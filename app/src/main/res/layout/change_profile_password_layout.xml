<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="20dp"



    >
    <EditText

    android:id="@+id/oldPassword"
    android:layout_width="300dp"
    android:layout_height="45dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="19dp"
    android:layout_marginRight="3dp"
    android:drawableLeft="@drawable/ic_ol_password"
    android:drawablePadding="15dp"
        android:layout_centerHorizontal="true"
    android:paddingLeft="15dp"
    android:hint="Old Password"
    android:background="@drawable/login_stuff_edit_text_background"/>


    <EditText
        android:id="@+id/newPassword"
        android:layout_below="@+id/oldPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="3dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_account_password"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:hint="New password"
        android:background="@drawable/login_stuff_edit_text_background"/>

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_below="@+id/newPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="3dp"
        android:drawableLeft="@drawable/ic_account_password"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:hint="Confirm password"
        android:background="@drawable/login_stuff_edit_text_background"/>
    <Button
        android:id="@+id/btnUpdate_password"
        android:layout_below="@+id/confirmPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Update"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="30dp"
        android:textColor="#FFF"
        android:backgroundTint="@color/colorAccent"
        android:textAllCaps="false"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>