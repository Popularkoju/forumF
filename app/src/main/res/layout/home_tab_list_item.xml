<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="16dp"
    >




    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        app:cardMaxElevation="15dp"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_toRightOf="@id/userImageInQuestion"
                android:text="popular"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"

                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/category"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginRight="16dp"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/username"/>

            <TextView
                android:id="@+id/time"
                android:layout_toRightOf="@id/userImageInQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00pm"
                android:textSize="10sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/username"/>

            <ImageView

                android:id="@+id/userImageInQuestion"
                android:layout_width="30dp"
                android:layout_marginTop="7dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_user"/>
            <View style="@style/Divider"
                android:layout_below="@+id/time"/>

            <TextView
                android:layout_below="@+id/time"
                android:id="@+id/questionTitle"
               android:padding="5dp"

                 android:text="What is your name?"
                android:textSize="17sp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <View style="@style/Divider"
                android:id="@+id/view"
                android:layout_height="0.5dp"
                android:layout_below="@id/questionTitle"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:id="@+id/like_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_like"
                    android:text="365"
                    android:textSize="15sp"
                    android:drawablePadding="7dp"
                    android:layout_weight="1"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/ans_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_answer"
                    android:text="365"
                    android:textSize="15sp"
                    android:drawablePadding="7dp"
                    android:layout_weight="1"/>


            <TextView
                    android:id="@+id/btncomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/questionTitle"
                   android:clickable="true"
                    android:text="Answer"
                android:drawableLeft="@drawable/ic_answer_post"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingEnd="20dp"
                android:background="#FFF"
                android:paddingLeft="3dp"

                android:layout_weight="1"
                android:paddingRight="30dp"></TextView>




            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>

